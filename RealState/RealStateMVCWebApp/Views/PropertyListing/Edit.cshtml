                                                        <div class="form-group">
                                                            <label for="neighborhood"
                                                                   class="text-heading">Neighborhood</label>
                                                            <input asp-for="Neighborhood" class="form-control form-control-lg border-0" />
                                                            <span asp-validation-for="Neighborhood" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-lg-12 col-xxl-6 px-2">
                                                        <div class="form-group">
                                                            <label for="zip"
                                                                   class="text-heading">Zip</label>
                                                            <input asp-for="Zip" class="form-control form-control-lg border-0" />
