    <script>
        function updatemark() {
            //debugger;
            var abc = "";
            //Iterating the collection of checkboxes which checked marked
            $('.chkAmentities input[type=checkbox]').each(function () {
                if (this.checked) {
                    abc = abc + $(this).val() + ","
                    //assign set value to hidden field
                    $('#AmenitiesStr').val(abc);
                }
            });
        }
    </script>
    <script>
        $(document).ready(function () {

            var preLoadLat = @Model.LanCoordinate;
            var preLoadLon = @Model.LonCoordinate;

            if (preLoadLat !== null && preLoadLon !== null) {
                var map = L.map('map', {
                    center: [preLoadLat, preLoadLon],
                    zoom: 13
                });
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; OpenStreetMap contributors'
                }).addTo(map);
                var marker = L.marker([preLoadLat, preLoadLon]).addTo(map);
            }



            $("#DetailedAddress").on("change", function () {
                var latitude = null;
                var longitude = null;
                var address = $("#DetailedAddress").val();
                var apiUrl = 'https://www.mapquestapi.com/geocoding/v1/address?key=sZmrZp41wPnL9kJCHvAHguqn6dmKKFIm&location=' + address;
                $.get(apiUrl, function (data) {
                    var location = data.results[0].locations[0];
                    latitude = location.latLng.lat;
                    longitude = location.latLng.lng;

                    $("#LonCoordinate").val(longitude)
                    $("#LanCoordinate").val(latitude)

                    var map = L.map('map', {
                        center: [latitude, longitude],
                        zoom: 13
                    });
                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; OpenStreetMap contributors'
                    }).addTo(map);
                    var marker = L.marker([latitude, longitude]).addTo(map);

                });
            });
        });
    </script>
