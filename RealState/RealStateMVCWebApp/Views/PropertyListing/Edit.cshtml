                                                            <label for="list-in"
                                                                   class="text-heading">Property Type</label>
                                                            @Html.DropDownListFor(model => model.PropertyType, new SelectList(ViewBag.PropertyType), new { @class = "form-control border-0 shadow-none form-control-lg selectpicker" })
                                                            <span asp-validation-for="PropertyType" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="card mb-6">
                                            <div class="card-body p-6">
                                                <h3 class="card-title mb-0 text-heading fs-22 lh-15">
                                                    Property Price
                                                </h3>
                                                <p class="card-text mb-5">
                                                    Lorem ipsum dolor sit amet, consectetur
                                                    adipiscing elit
                                                </p>
                                                <div class="form-row mx-n2">
                                                    <div class="col-md-6 col-lg-12 col-xxl-6 px-2">
                                                        <div class="form-group">
                                                            <label for="price"
                                                                   class="text-heading">
