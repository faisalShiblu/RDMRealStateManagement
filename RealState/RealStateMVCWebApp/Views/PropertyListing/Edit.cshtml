            <input asp-for="Id" type="hidden" />
            <div id="collapse-tabs-accordion">
                <div class="tab-pane tab-pane-parent fade show active px-0"
                     id="description"
                     role="tabpanel"
                     aria-labelledby="description-tab">
                    <div class="card bg-transparent border-0">
